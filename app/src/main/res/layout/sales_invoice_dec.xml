<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1f6b1c"
        android:gravity="center"
        android:text="Destination Details"
        android:textColor="#FFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="txt_one"
                android:textColor="#000" />


            <TextView
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="one"
                android:textColor="#d85a41" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="txt_two"
                android:textColor="#000" />

            <TextView
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="two"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_three"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="txt_three"
                android:textColor="#000" />

            <TextView
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="three"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_four"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="txt_four"
                android:textColor="#000" />

            <TextView
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="four"
                android:textColor="#000" />
        </LinearLayout>





    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="#485"
            android:text="CANCEl"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_create"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:background="#485"
            android:text="OK"
            android:textColor="#fff" />

    </RelativeLayout>

</LinearLayout>