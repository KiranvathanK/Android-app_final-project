<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback"

    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="shashi.com.driving_style.activities.SendFeedbacksActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">


        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/sp_s"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:entries="@array/locc">

        </com.toptoche.searchablespinnerlibrary.SearchableSpinner>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/sp_d"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:entries="@array/loc">

        </com.toptoche.searchablespinnerlibrary.SearchableSpinner>

        <EditText
            android:id="@+id/rc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:digits="012345"
            android:paddingLeft="10dp"
            android:hint="Rate Road Condition out of 5"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/h"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:digits="012345"
            android:paddingLeft="10dp"
            android:hint="Rate Humps out of 5"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:digits="012345"
            android:hint="Rate Traffic out of 5"
            android:inputType="number"
            android:maxLength="1" />

        <Button
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="#FFA500"
            android:layout_marginTop="20dp"
            android:text="submit" />

        <Button
            android:id="@+id/vv"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:background="#FFA500"
            android:layout_marginTop="20dp"
            android:text="VIEW feedbacks" />
    </LinearLayout>
</ScrollView>
