<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#34F05C" android:startColor="#119744" />
            <corners android:radius="5dp" />
            <stroke android:width="0dp" android:color="@android:color/black" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="#5ba1ef" android:startColor="#27f2dd" />
            <corners android:radius="5dp" />
            <stroke android:width="0dp" android:color="@android:color/black" />
        </shape>

    </item>
</selector>